<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:background="@color/darkBlue">

    <!--    <ListView-->
    <!--        android:id="@+id/listLanguages"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_gravity="center_horizontal" />-->

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Dil seç"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:id="@+id/layoutTR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RadioButton
            android:id="@+id/radioTR"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:clickable="false" />

        <TextView
            android:id="@+id/txtTR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="Türkçe"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RadioButton
            android:id="@+id/radioEN"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:checked="false"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:clickable="false" />

        <TextView
            android:id="@+id/txtEN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="English"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RadioButton
            android:id="@+id/radioFR"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:checked="false"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:clickable="false" />

        <TextView
            android:id="@+id/txtFR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="Français"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RadioButton
            android:id="@+id/radioDE"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:checked="false"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:clickable="false" />

        <TextView
            android:id="@+id/txtDE"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="Deutsch"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RadioButton
            android:id="@+id/radioES"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:checked="false"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:clickable="false" />

        <TextView
            android:id="@+id/txtES"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:text="Español"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:text="İPTAL"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:text="TAMAM"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>